# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - only commit .env.example

# ============================================
# API Configuration
# ============================================
API_BASE_URL=http://localhost:8000
API_TIMEOUT_SECONDS=30

# ============================================
# Authentication
# ============================================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION_HOURS=24

# ============================================
# Firebase Configuration
# ============================================
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# ============================================
# Database (Backend)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/taskcloud
DATABASE_NAME=taskcloud
DATABASE_USER=postgres
DATABASE_PASSWORD=your_database_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# ============================================
# Third-Party Services
# ============================================
# Google API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email Service (e.g., SendGrid)
EMAIL_API_KEY=your_email_service_api_key
EMAIL_FROM=noreply@ibn-nabil.com

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key

# ============================================
# Environment
# ============================================
ENVIRONMENT=development
DEBUG=true

# ============================================
# Security
# ============================================
SECRET_KEY=your_django_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1,ibn-nabil.com

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://ibn-nabil.com

# ============================================
# Storage (if using cloud storage)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=taskcloud-bucket
AWS_S3_REGION=us-east-1

# ============================================
# Testing
# ============================================
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/taskcloud_test
